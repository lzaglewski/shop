{% extends 'base.html.twig' %}

{% block title %}{{ 'contact.title'|trans }} - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="mb-4">{{ 'contact.contact_us'|trans }}</h1>

                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-4 mb-md-0">

                                <p>{{ 'contact.description'|trans }}</p>

                                <div class="mb-3">
                                    <h5><i class="bi bi-geo-alt-fill me-2"></i> {{ 'contact.address'|trans }}</h5>
                                    <p>
                                        B2B Shop, Inc.<br>
                                        123 Business Street<br>
                                        Business District, BD 12345
                                    </p>
                                </div>

                                <div class="mb-3">
                                    <h5><i class="bi bi-telephone-fill me-2"></i> {{ 'contact.phone'|trans }}</h5>
                                    <p>(123) 456-7890</p>
                                </div>

                                <div class="mb-3">
                                    <h5><i class="bi bi-envelope-fill me-2"></i> Email</h5>
                                    <p>info@b2bshop.com</p>
                                </div>

                                <div>
                                    <h5><i class="bi bi-clock-fill me-2"></i> {{ 'contact.business_hours'|trans }}</h5>
                                    <p>
                                        {{ 'contact.hours_weekdays'|trans }}<br>
                                        {{ 'contact.hours_weekend'|trans }}
                                    </p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h3>{{ 'contact.send_message'|trans }}</h3>

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        {{ message|trans }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        {{ message|trans }}
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                {% endfor %}

                                {{ form_start(contactForm) }}
                                    <div class="mb-3">
                                        {{ form_label(contactForm.name) }}
                                        {{ form_widget(contactForm.name) }}
                                        {{ form_errors(contactForm.name) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(contactForm.email) }}
                                        {{ form_widget(contactForm.email) }}
                                        {{ form_errors(contactForm.email) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(contactForm.subject) }}
                                        {{ form_widget(contactForm.subject) }}
                                        {{ form_errors(contactForm.subject) }}
                                    </div>

                                    <div class="mb-3">
                                        {{ form_label(contactForm.message) }}
                                        {{ form_widget(contactForm.message) }}
                                        {{ form_errors(contactForm.message) }}
                                    </div>

                                    {{ form_widget(contactForm.submit) }}
                                {{ form_end(contactForm) }}
                            </div>
                        </div>
                    </div>
                </div>

