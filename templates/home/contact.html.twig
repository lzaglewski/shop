{% extends 'base.html.twig' %}

{% block title %}Contact Us - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="mb-4">Contact Us</h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-4 mb-md-0">
                                <h3>Get in Touch</h3>
                                <p>We'd love to hear from you. Please fill out the form or contact us using the information below.</p>
                                
                                <div class="mb-3">
                                    <h5><i class="bi bi-geo-alt-fill me-2"></i> Address</h5>
                                    <p>
                                        B2B Shop, Inc.<br>
                                        123 Business Street<br>
                                        Business District, BD 12345
                                    </p>
                                </div>
                                
                                <div class="mb-3">
                                    <h5><i class="bi bi-telephone-fill me-2"></i> Phone</h5>
                                    <p>(123) 456-7890</p>
                                </div>
                                
                                <div class="mb-3">
                                    <h5><i class="bi bi-envelope-fill me-2"></i> Email</h5>
                                    <p>info@b2bshop.com</p>
                                </div>
                                
                                <div>
                                    <h5><i class="bi bi-clock-fill me-2"></i> Business Hours</h5>
                                    <p>
                                        Monday - Friday: 9:00 AM - 5:00 PM<br>
                                        Saturday - Sunday: Closed
                                    </p>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <h3>Send us a Message</h3>
                                <form>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="name" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="subject" class="form-label">Subject</label>
                                        <input type="text" class="form-control" id="subject" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="message" class="form-label">Message</label>
                                        <textarea class="form-control" id="message" rows="5" required></textarea>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Find Us</h3>
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368400567!3d40.71312937933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a23e28c1191%3A0x49f75d3281df052a!2s150%20Park%20Row%2C%20New%20York%2C%20NY%2010007%2C%20USA!5e0!3m2!1sen!2sbg!4v1579767901424!5m2!1sen!2sbg" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
