{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.checkout'|trans }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>{{ 'checkout.checkout'|trans }}</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message|trans }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message|trans }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.order_information'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(checkoutForm) }}
                            <!-- Email i numer kontaktowy -->
                            <div class="mb-3">
                                {{ form_label(checkoutForm.email) }}
                                {{ form_widget(checkoutForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(checkoutForm.email) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(checkoutForm.contactNumber) }}
                                {{ form_widget(checkoutForm.contactNumber, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(checkoutForm.contactNumber) }}
                            </div>
                            
                            <!-- Adres rozliczeniowy -->
                            <div id="billing_address_container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h6 class="mb-3">{{ 'checkout.billing_address'|trans }}</h6>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.billingCompanyName) }}
                                            {{ form_widget(checkoutForm.billingCompanyName, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.billingCompanyName) }}
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.billingStreet) }}
                                            {{ form_widget(checkoutForm.billingStreet, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.billingStreet) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.billingPostalCode) }}
                                            {{ form_widget(checkoutForm.billingPostalCode, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.billingPostalCode) }}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.billingCity) }}
                                            {{ form_widget(checkoutForm.billingCity, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.billingCity) }}
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.billingTaxId) }}
                                            {{ form_widget(checkoutForm.billingTaxId, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.billingTaxId) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Checkbox dla adresu dostawy -->
                            <div class="mb-3">
                                <div class="form-check">
                                    {{ form_widget(checkoutForm.sameAsBilling, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(checkoutForm.sameAsBilling, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                            
                            <!-- Adres dostawy -->
                            <div id="delivery_address_container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h6 class="mb-3">{{ 'checkout.delivery_address'|trans }}</h6>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.deliveryStreet) }}
                                            {{ form_widget(checkoutForm.deliveryStreet, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.deliveryStreet) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.deliveryPostalCode) }}
                                            {{ form_widget(checkoutForm.deliveryPostalCode, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.deliveryPostalCode) }}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            {{ form_label(checkoutForm.deliveryCity) }}
                                            {{ form_widget(checkoutForm.deliveryCity, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(checkoutForm.deliveryCity) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Notatki -->
                            <div class="mb-3">
                                {{ form_label(checkoutForm.notes) }}
                                {{ form_widget(checkoutForm.notes, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                                {{ form_errors(checkoutForm.notes) }}
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('cart_index') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> {{ 'checkout.back_to_cart'|trans }}
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> {{ 'checkout.place_order'|trans }}
                                </button>
                            </div>
                        {{ form_end(checkoutForm) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.order_summary'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <tbody>
                                    {% for item in cart.items %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <strong>{{ item.product.name }}</strong>
                                                        <div class="small text-muted">{{ item.quantity }} x {{ item.price|number_format(2) }}</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">{{ item.subtotal|number_format(2) }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td><strong>{{ 'common.total'|trans }}</strong></td>
                                        <td class="text-end"><strong>{{ cart.totalPrice|number_format(2) }}</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Checkout JS loaded');
            
            const sameAddressCheckbox = document.querySelector('[name="checkout[sameAsBilling]"]');
            const deliveryAddressContainer = document.getElementById('delivery_address_container');
            
            console.log('sameAddressCheckbox:', sameAddressCheckbox);
            console.log('deliveryAddressContainer:', deliveryAddressContainer);
            
            if (!sameAddressCheckbox || !deliveryAddressContainer) {
                console.error('Required elements not found');
                console.log('All checkboxes:', document.querySelectorAll('input[type="checkbox"]'));
                console.log('All containers:', document.querySelectorAll('[id*="container"]'));
                return;
            }
            
            // Delivery address fields
            const deliveryStreet = document.querySelector('[name="checkout[deliveryStreet]"]');
            const deliveryPostalCode = document.querySelector('[name="checkout[deliveryPostalCode]"]');
            const deliveryCity = document.querySelector('[name="checkout[deliveryCity]"]');
            
            // Billing address fields  
            const billingCompanyName = document.querySelector('[name="checkout[billingCompanyName]"]');
            const billingStreet = document.querySelector('[name="checkout[billingStreet]"]');
            const billingPostalCode = document.querySelector('[name="checkout[billingPostalCode]"]');
            const billingCity = document.querySelector('[name="checkout[billingCity]"]');
            
            console.log('Form fields found:', {
                deliveryStreet: !!deliveryStreet,
                deliveryPostalCode: !!deliveryPostalCode,
                deliveryCity: !!deliveryCity,
                billingCompanyName: !!billingCompanyName,
                billingStreet: !!billingStreet,
                billingPostalCode: !!billingPostalCode,
                billingCity: !!billingCity
            });
            
            function updateDeliveryAddressVisibility() {
                console.log('updateDeliveryAddressVisibility called, checked:', sameAddressCheckbox.checked);
                if (sameAddressCheckbox.checked) {
                    deliveryAddressContainer.style.display = 'none';
                    // Copy billing address to delivery address
                    copyBillingToDelivery();
                } else {
                    deliveryAddressContainer.style.display = 'block';
                }
            }
            
            function copyBillingToDelivery() {
                if (sameAddressCheckbox.checked && deliveryStreet && deliveryPostalCode && deliveryCity) {
                    deliveryStreet.value = billingStreet.value;
                    deliveryPostalCode.value = billingPostalCode.value;
                    deliveryCity.value = billingCity.value;
                    console.log('Address copied from billing to delivery');
                }
            }
            
            // Event listeners
            sameAddressCheckbox.addEventListener('change', updateDeliveryAddressVisibility);
            
            // Auto-copy billing address to delivery when same address is checked
            [billingStreet, billingPostalCode, billingCity].forEach(function(field) {
                if (field) {
                    field.addEventListener('input', copyBillingToDelivery);
                }
            });
            
            // Initial state
            updateDeliveryAddressVisibility();
        });
    </script>
{% endblock %}
