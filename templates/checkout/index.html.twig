{% extends 'base.html.twig' %}

{% block title %}{{ 'checkout.checkout'|trans }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1>{{ 'checkout.checkout'|trans }}</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message|trans }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message|trans }}
            </div>
        {% endfor %}
        
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.order_information'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('checkout_place_order') }}" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">{{ 'checkout.email_address'|trans }} *</label>
                                <input type="email" class="form-control" id="email" name="email" required
                                       value="{{ user ? user.email : '' }}">
                            </div>
                            
                            <div class="mb-3">
                                <label for="company_name" class="form-label">{{ 'checkout.company_name'|trans }} *</label>
                                <input type="text" class="form-control" id="company_name" name="company_name" required
                                       value="{{ user ? user.companyName : '' }}">
                            </div>
                            
                            <div class="mb-3">
                                <label for="tax_id" class="form-label">{{ 'checkout.tax_id'|trans }}</label>
                                <input type="text" class="form-control" id="tax_id" name="tax_id"
                                       value="{{ user ? user.taxId : '' }}">
                            </div>
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <h6 class="mb-3">{{ 'checkout.delivery_address'|trans }}</h6>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label for="delivery_street" class="form-label">{{ 'checkout.street_address'|trans }} *</label>
                                        <input type="text" class="form-control" id="delivery_street" name="delivery_street" required
                                               value="{{ user and user.deliveryStreet ? user.deliveryStreet : '' }}">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label for="delivery_postal_code" class="form-label">{{ 'checkout.postal_code'|trans }} *</label>
                                        <input type="text" class="form-control" id="delivery_postal_code" name="delivery_postal_code" required
                                               value="{{ user and user.deliveryPostalCode ? user.deliveryPostalCode : '' }}">
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="delivery_city" class="form-label">{{ 'checkout.city'|trans }} *</label>
                                        <input type="text" class="form-control" id="delivery_city" name="delivery_city" required
                                               value="{{ user and user.deliveryCity ? user.deliveryCity : '' }}">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label for="contact_number" class="form-label">{{ 'checkout.contact_number'|trans }}</label>
                                        <input type="text" class="form-control" id="contact_number" name="contact_number"
                                               value="{{ user and user.contactNumber ? user.contactNumber : '' }}">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="same_address" checked>
                                    <label class="form-check-label" for="same_address">
                                        {{ 'checkout.same_billing_address'|trans }}
                                    </label>
                                </div>
                            </div>
                            
                            <div id="billing_address_container" style="display: none;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h6 class="mb-3">{{ 'checkout.billing_address'|trans }}</h6>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="billing_company_name" class="form-label">{{ 'checkout.billing_company_name'|trans }}</label>
                                            <input type="text" class="form-control" id="billing_company_name" name="billing_company_name"
                                                   value="{{ user and user.billingCompanyName ? user.billingCompanyName : '' }}">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="billing_street" class="form-label">{{ 'checkout.street_address'|trans }} *</label>
                                            <input type="text" class="form-control" id="billing_street" name="billing_street" required
                                                   value="{{ user and user.billingStreet ? user.billingStreet : '' }}">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label for="billing_postal_code" class="form-label">{{ 'checkout.postal_code'|trans }} *</label>
                                            <input type="text" class="form-control" id="billing_postal_code" name="billing_postal_code" required
                                                   value="{{ user and user.billingPostalCode ? user.billingPostalCode : '' }}">
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label for="billing_city" class="form-label">{{ 'checkout.city'|trans }} *</label>
                                            <input type="text" class="form-control" id="billing_city" name="billing_city" required
                                                   value="{{ user and user.billingCity ? user.billingCity : '' }}">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label for="billing_tax_id" class="form-label">{{ 'checkout.billing_tax_id'|trans }}</label>
                                            <input type="text" class="form-control" id="billing_tax_id" name="billing_tax_id"
                                                   value="{{ user and user.billingTaxId ? user.billingTaxId : '' }}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="notes" class="form-label">{{ 'checkout.order_notes'|trans }}</label>
                                <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('cart_index') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> {{ 'checkout.back_to_cart'|trans }}
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> {{ 'checkout.place_order'|trans }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.order_summary'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <tbody>
                                    {% for item in cart.items %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div>
                                                        <strong>{{ item.product.name }}</strong>
                                                        <div class="small text-muted">{{ item.quantity }} x {{ item.price|number_format(2) }}</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end">{{ item.subtotal|number_format(2) }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td><strong>{{ 'common.total'|trans }}</strong></td>
                                        <td class="text-end"><strong>{{ cart.totalPrice|number_format(2) }}</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sameAddressCheckbox = document.getElementById('same_address');
            const billingAddressContainer = document.getElementById('billing_address_container');
            
            // Delivery address fields
            const deliveryStreet = document.getElementById('delivery_street');
            const deliveryPostalCode = document.getElementById('delivery_postal_code');
            const deliveryCity = document.getElementById('delivery_city');
            const contactNumber = document.getElementById('contact_number');
            const companyName = document.getElementById('company_name');
            
            // Billing address fields  
            const billingCompanyName = document.getElementById('billing_company_name');
            const billingStreet = document.getElementById('billing_street');
            const billingPostalCode = document.getElementById('billing_postal_code');
            const billingCity = document.getElementById('billing_city');
            const billingTaxId = document.getElementById('billing_tax_id');
            
            function updateBillingAddressVisibility() {
                if (sameAddressCheckbox.checked) {
                    billingAddressContainer.style.display = 'none';
                    // Copy delivery address to billing address
                    copyDeliveryToBilling();
                } else {
                    billingAddressContainer.style.display = 'block';
                }
            }
            
            function copyDeliveryToBilling() {
                if (sameAddressCheckbox.checked) {
                    billingCompanyName.value = companyName.value;
                    billingStreet.value = deliveryStreet.value;
                    billingPostalCode.value = deliveryPostalCode.value;
                    billingCity.value = deliveryCity.value;
                }
            }
            
            // Event listeners
            sameAddressCheckbox.addEventListener('change', updateBillingAddressVisibility);
            
            // Auto-copy delivery address to billing when same address is checked
            [deliveryStreet, deliveryPostalCode, deliveryCity, companyName].forEach(function(field) {
                field.addEventListener('input', copyDeliveryToBilling);
            });
            
            updateBillingAddressVisibility();
        });
    </script>
{% endblock %}
