<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <title>{% block title %}Admin Panel - B2B Shop{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ asset('style.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/vendor.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
        <style>
            .admin-sidebar {
                min-height: calc(100vh - 80px);
                background-color: #f8f9fa;
                border-left: 1px solid #dee2e6;
                padding: 1.5rem 1rem;
            }
            .admin-sidebar .nav-link {
                color: #495057;
                padding: 0.75rem 1rem;
                margin-bottom: 0.25rem;
                border-radius: 0.375rem;
                transition: all 0.2s ease-in-out;
            }
            .admin-sidebar .nav-link:hover {
                background-color: #e9ecef;
                color: #212529;
            }
            .admin-sidebar .nav-link.active {
                background-color: #0d6efd;
                color: white;
            }
            .admin-sidebar .nav-link i {
                margin-right: 0.5rem;
                width: 1.2rem;
            }
            .admin-content {
                min-height: calc(100vh - 80px);
                padding: 1.5rem;
            }
            .admin-header {
                background-color: #fff;
                border-bottom: 1px solid #dee2e6;
                padding: 1rem 0;
                margin-bottom: 0;
            }
        </style>
    {% endblock %}
</head>

<body>
    <!-- Main header (simplified for admin) -->
    <header class="admin-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <a href="{{ path('homepage') }}" class="navbar-brand me-4">
                            <img src="{{ asset('images/bluble-logo.png') }}" height="40" alt="B2B Shop">
                        </a>
                        <h5 class="mb-0 text-muted">Panel Administracyjny</h5>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end align-items-center">
                        {% if app.user %}
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>{{ app.user.email }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="{{ path('app_profile') }}">{{ 'navigation.profile'|trans }}</a></li>
                                    <li><a class="dropdown-item" href="{{ path('homepage') }}">{{ 'navigation.back_to_shop'|trans }}</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'navigation.logout'|trans }}</a></li>
                                </ul>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">


            <!-- Left sidebar with admin navigation -->
            <div class="col-lg-3 col-xl-2">
                <div class="admin-sidebar">
                    <h6 class="sidebar-heading text-muted text-uppercase mb-3">
                        <i class="bi bi-gear-fill me-2"></i>
                        Administracja
                    </h6>

                    <nav class="nav flex-column">
                        <a href="{{ path('admin_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                            <i class="bi bi-speedometer2"></i>
                            {{ 'navigation.dashboard'|trans }}
                        </a>

                        <a href="{{ path('admin_statistics') }}" class="nav-link {% if app.request.get('_route') == 'admin_statistics' %}active{% endif %}">
                            <i class="bi bi-bar-chart-line"></i>
                            Statystyki
                        </a>

                        <hr class="my-3">

                        <h6 class="sidebar-heading text-muted text-uppercase mb-2">
                            ZarzÄ…dzanie
                        </h6>

                        <a href="{{ path('admin_order_list') }}" class="nav-link {% if app.request.get('_route') starts with 'admin_order_' %}active{% endif %}">
                            <i class="bi bi-box-seam"></i>
                            {{ 'navigation.orders'|trans }}
                        </a>

                        <a href="{{ path('user_index') }}" class="nav-link {% if app.request.get('_route') starts with 'user_' %}active{% endif %}">
                            <i class="bi bi-people"></i>
                            {{ 'navigation.users'|trans }}
                        </a>

                        <a href="{{ path('product_admin_list') }}" class="nav-link {% if app.request.get('_route') == 'product_admin_list' or app.request.get('_route') starts with 'product_admin_' %}active{% endif %}">
                            <i class="bi bi-box"></i>
                            {{ 'navigation.products'|trans }}
                        </a>

                        <a href="{{ path('category_list') }}" class="nav-link {% if app.request.get('_route') starts with 'category_' %}active{% endif %}">
                            <i class="bi bi-tags"></i>
                            {{ 'navigation.categories'|trans }}
                        </a>

                        <a href="{{ path('client_price_index') }}" class="nav-link {% if app.request.get('_route') starts with 'client_price_' %}active{% endif %}">
                            <i class="bi bi-currency-euro"></i>
                            {{ 'navigation.client_prices'|trans }}
                        </a>

                        <a href="{{ path('admin_lead_list') }}" class="nav-link {% if app.request.get('_route') starts with 'admin_lead_' %}active{% endif %}">
                            <i class="bi bi-envelope-heart"></i>
                            Leady
                        </a>

                        <hr class="my-3">

                        <a href="{{ path('admin_settings') }}" class="nav-link {% if app.request.get('_route') starts with 'admin_settings' %}active{% endif %}">
                            <i class="bi bi-gear"></i>
                            Ustawienia
                        </a>
                    </nav>
                </div>
            </div>

            <div class="col-lg-9 col-xl-10">
                <div class="admin-content">
                    {% block body %}{% endblock %}
                </div>
            </div>
            
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
        <script src="{{ asset('js/plugins.js') }}"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        <script>
            // Global function to show fixed position messages
            window.showMessage = function(message, type) {
                const existingAlerts = document.querySelectorAll('.alert[style*="position: fixed"]');
                let topPosition = 20;
                existingAlerts.forEach(alert => {
                    topPosition += alert.offsetHeight + 10;
                });

                const alertDiv = document.createElement('div');
                const alertType = type === 'danger' ? 'danger' : (type === 'error' ? 'danger' : type);
                alertDiv.className = `alert alert-${alertType} alert-dismissible fade show`;
                alertDiv.style.position = 'fixed';
                alertDiv.style.top = topPosition + 'px';
                alertDiv.style.right = '20px';
                alertDiv.style.zIndex = '9999';
                alertDiv.style.minWidth = '300px';
                alertDiv.style.maxWidth = '400px';
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;

                document.body.appendChild(alertDiv);

                setTimeout(() => {
                    if (alertDiv.parentNode) {
                        alertDiv.remove();
                        repositionAlerts();
                    }
                }, 4000);

                const closeBtn = alertDiv.querySelector('.btn-close');
                if (closeBtn) {
                    closeBtn.addEventListener('click', () => {
                        alertDiv.remove();
                        repositionAlerts();
                    });
                }
            };

            function repositionAlerts() {
                const alerts = document.querySelectorAll('.alert[style*="position: fixed"]');
                let topPosition = 20;
                alerts.forEach(alert => {
                    alert.style.top = topPosition + 'px';
                    topPosition += alert.offsetHeight + 10;
                });
            }

            // Show flash messages on page load
            document.addEventListener('DOMContentLoaded', function() {
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        showMessage('{{ message|trans|e('js') }}', '{{ label }}');
                    {% endfor %}
                {% endfor %}
            });
        </script>
    {% endblock %}
</body>
</html>
