{#
/**
 * Custom pagination template with theme colors
 */
#}
{% if pageCount > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center" style="margin: 2rem 0;">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" rel="prev" href="{{ path(route, knp_pagination_query(query, previous, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';"><i class="bi bi-chevron-left"></i>&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link" style="color: #6c757d; background-color: #f8f9fa; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; cursor: not-allowed;"><i class="bi bi-chevron-left"></i>&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</span>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, knp_pagination_query(query, 1, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">1</a>
                </li>
                {% if startPage == 3 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, knp_pagination_query(query, 2, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">2</a>
                    </li>
                {% elseif startPage != 2 %}
                    <li class="page-item disabled">
                        <span class="page-link" style="color: #6c757d; background-color: #f8f9fa; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem;">&hellip;</span>
                    </li>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, knp_pagination_query(query, page, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active">
                        <span class="page-link" style="color: #fff; background-color: #F86D72; border: 1px solid #F86D72; padding: 0.375rem 0.75rem; font-weight: 500;">{{ page }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="page-item disabled">
                            <span class="page-link" style="color: #6c757d; background-color: #f8f9fa; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem;">&hellip;</span>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path(route, knp_pagination_query(query, pageCount - 1, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">{{ pageCount - 1 }}</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="page-item">
                    <a class="page-link" href="{{ path(route, knp_pagination_query(query, pageCount, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">{{ pageCount }}</a>
                </li>
            {% endif %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" rel="next" href="{{ path(route, knp_pagination_query(query, next, options)) }}" style="color: #272727; background-color: #fff; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; text-decoration: none; transition: all 0.3s ease;" onmouseover="this.style.color='#fff'; this.style.backgroundColor='#F86D72'; this.style.borderColor='#F86D72';" onmouseout="this.style.color='#272727'; this.style.backgroundColor='#fff'; this.style.borderColor='#dee2e6';">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;<i class="bi bi-chevron-right"></i></a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link" style="color: #6c757d; background-color: #f8f9fa; border: 1px solid #dee2e6; padding: 0.375rem 0.75rem; cursor: not-allowed;">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;<i class="bi bi-chevron-right"></i></span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}