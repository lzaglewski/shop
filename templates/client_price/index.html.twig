{% extends 'base.html.twig' %}

{% block title %}Client Prices - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Client Prices</h1>
            <a href="{{ path('client_price_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Client Price
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label for="client" class="form-label">Client</label>
                        <select name="client" id="client" class="form-select">
                            <option value="">All Clients</option>
                            {% for client in clients %}
                                <option value="{{ client.id }}" {% if app.request.query.get('client') == client.id ~ '' %}selected{% endif %}>
                                    {{ client.companyName }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="product" class="form-label">Product</label>
                        <select name="product" id="product" class="form-select">
                            <option value="">All Products</option>
                            {% for product in products %}
                                <option value="{{ product.id }}" {% if app.request.query.get('product') == product.id ~ '' %}selected{% endif %}>
                                    {{ product.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="active" class="form-label">Status</label>
                        <select name="active" id="active" class="form-select">
                            <option value="">All</option>
                            <option value="1" {% if app.request.query.get('active') == '1' %}selected{% endif %}>Active</option>
                            <option value="0" {% if app.request.query.get('active') == '0' %}selected{% endif %}>Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Filter</button>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Product</th>
                                <th>Base Price</th>
                                <th>Client Price</th>
                                <th>Discount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for clientPrice in clientPrices %}
                                <tr>
                                    <td>{{ clientPrice.id }}</td>
                                    <td>{{ clientPrice.client.companyName }}</td>
                                    <td>{{ clientPrice.product.name }}</td>
                                    <td>{{ clientPrice.product.basePrice }}€</td>
                                    <td>{{ clientPrice.price }}€</td>
                                    <td>
                                        {% if clientPrice.price < clientPrice.product.basePrice %}
                                            <span class="text-success">
                                                {{ ((1 - clientPrice.price / clientPrice.product.basePrice) * 100)|round }}%
                                            </span>
                                        {% elseif clientPrice.price > clientPrice.product.basePrice %}
                                            <span class="text-danger">
                                                +{{ ((clientPrice.price / clientPrice.product.basePrice - 1) * 100)|round }}%
                                            </span>
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if clientPrice.isActive %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactive</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('client_price_edit', {'id': clientPrice.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('client_price_delete', {'id': clientPrice.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this client price?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ clientPrice.id) }}">
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">No client prices found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% if clientPrices.haveToPaginate is defined and clientPrices.haveToPaginate %}
                    <div class="navigation d-flex justify-content-center mt-4">
                        {{ knp_pagination_render(clientPrices) }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
