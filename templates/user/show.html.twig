{% extends 'base_admin.html.twig' %}

{% block title %}User Details - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('user_index') }}">Users</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ user.companyName }}</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ user.companyName }}</h1>
            <div>
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                {% if not user.isAdmin or is_granted('ROLE_SUPER_ADMIN') %}
                    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">User Information</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th style="width: 30%">ID</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Login</th>
                                    <td>{{ user.login }}</td>
                                </tr>
                                <tr>
                                    <th>Company Name</th>
                                    <td>{{ user.companyName }}</td>
                                </tr>
                                <tr>
                                    <th>Tax ID</th>
                                    <td>{{ user.taxId }}</td>
                                </tr>
                                {% if user.contactNumber %}
                                <tr>
                                    <th>{{ 'form.contact_number'|trans }}</th>
                                    <td>{{ user.contactNumber }}</td>
                                </tr>
                                {% endif %}
                                <tr>
                                    <th>Role</th>
                                    <td>
                                        {% if user.isAdmin %}
                                            <span class="badge bg-danger">Admin</span>
                                        {% else %}
                                            <span class="badge bg-primary">Client</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>
                                        {% if user.isActive %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactive</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Delivery Address Card #}
                {% if user.deliveryStreet or user.deliveryCity or user.deliveryPostalCode %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.shipping_address'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                {% if user.deliveryStreet %}
                                <tr>
                                    <th style="width: 30%">{{ 'form.delivery_street'|trans }}</th>
                                    <td>{{ user.deliveryStreet }}</td>
                                </tr>
                                {% endif %}
                                {% if user.deliveryPostalCode %}
                                <tr>
                                    <th>{{ 'form.delivery_postal_code'|trans }}</th>
                                    <td>{{ user.deliveryPostalCode }}</td>
                                </tr>
                                {% endif %}
                                {% if user.deliveryCity %}
                                <tr>
                                    <th>{{ 'form.delivery_city'|trans }}</th>
                                    <td>{{ user.deliveryCity }}</td>
                                </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}

                {# Billing Information Card #}
                {% if user.billingCompanyName or user.billingStreet or user.billingCity or user.billingPostalCode or user.billingTaxId %}
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">{{ 'checkout.billing_address'|trans }}</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                {% if user.billingCompanyName %}
                                <tr>
                                    <th style="width: 30%">{{ 'form.billing_company_name'|trans }}</th>
                                    <td>{{ user.billingCompanyName }}</td>
                                </tr>
                                {% endif %}
                                {% if user.billingTaxId %}
                                <tr>
                                    <th>{{ 'form.billing_tax_id'|trans }}</th>
                                    <td>{{ user.billingTaxId }}</td>
                                </tr>
                                {% endif %}
                                {% if user.billingStreet %}
                                <tr>
                                    <th>{{ 'form.billing_street'|trans }}</th>
                                    <td>{{ user.billingStreet }}</td>
                                </tr>
                                {% endif %}
                                {% if user.billingPostalCode %}
                                <tr>
                                    <th>{{ 'form.billing_postal_code'|trans }}</th>
                                    <td>{{ user.billingPostalCode }}</td>
                                </tr>
                                {% endif %}
                                {% if user.billingCity %}
                                <tr>
                                    <th>{{ 'form.billing_city'|trans }}</th>
                                    <td>{{ user.billingCity }}</td>
                                </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}
            </div>

            {% if not user.isAdmin %}
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Client Prices</h5>
                        </div>
                        <div class="card-body">
                            {% if user.clientPrices|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Base Price</th>
                                                <th>Client Price</th>
                                                <th>Discount</th>
                                                <th>Status</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for clientPrice in user.clientPrices %}
                                                <tr>
                                                    <td>{{ clientPrice.product.name }}</td>
                                                    <td>{{ clientPrice.product.basePrice }}{{ currency() }}</td>
                                                    <td>{{ clientPrice.price }}{{ currency() }}</td>
                                                    <td>
                                                        {% if clientPrice.price < clientPrice.product.basePrice %}
                                                            <span class="text-success">
                                                                {{ ((1 - clientPrice.price / clientPrice.product.basePrice) * 100)|round }}%
                                                            </span>
                                                        {% elseif clientPrice.price > clientPrice.product.basePrice %}
                                                            <span class="text-danger">
                                                                +{{ ((clientPrice.price / clientPrice.product.basePrice - 1) * 100)|round }}%
                                                            </span>
                                                        {% else %}
                                                            0%
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        {% if clientPrice.isActive %}
                                                            <span class="badge bg-success">Active</span>
                                                        {% else %}
                                                            <span class="badge bg-secondary">Inactive</span>
                                                        {% endif %}
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('client_price_edit', {'id': clientPrice.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-info mb-0">
                                    No custom prices set for this client.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
