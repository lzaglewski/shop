{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Order Details</h1>
            <a href="{{ path('user_orders') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Order #{{ order.orderNumber }}</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Order Date:</strong> {{ order.createdAt|date('Y-m-d H:i') }}</p>
                        <p>
                            <strong>Status:</strong>
                            <span class="badge {% if order.status.value == 'new' %}bg-primary
                                {% elseif order.status.value == 'processing' %}bg-info
                                {% elseif order.status.value == 'shipped' %}bg-warning
                                {% elseif order.status.value == 'delivered' %}bg-success
                                {% else %}bg-danger{% endif %}">
                                {{ order.status.value|capitalize }}
                            </span>
                        </p>
                        <p><strong>Email:</strong> {{ order.customerEmail }}</p>
                        <p><strong>Company:</strong> {{ order.customerCompanyName }}</p>
                        {% if order.customerTaxId %}
                            <p><strong>Tax ID:</strong> {{ order.customerTaxId }}</p>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        <p><strong>Shipping Address:</strong></p>
                        <p>{{ order.shippingAddress|nl2br }}</p>
                        <p><strong>Billing Address:</strong></p>
                        <p>{{ order.billingAddress|nl2br }}</p>
                    </div>
                </div>
                
                {% if order.notes %}
                    <div class="mb-3">
                        <p><strong>Order Notes:</strong></p>
                        <p>{{ order.notes|nl2br }}</p>
                    </div>
                {% endif %}
                
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>SKU</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.items %}
                                <tr>
                                    <td>{{ item.productName }}</td>
                                    <td>{{ item.productSku }}</td>
                                    <td>{{ item.price|number_format(2) }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td>{{ item.subtotal|number_format(2) }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td><strong>{{ order.totalAmount|number_format(2) }}</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
