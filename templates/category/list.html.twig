{% extends 'base.html.twig' %}

{% block title %}Categories - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Categories</h1>
            <a href="{{ path('category_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Category
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                {% if categories|length > 0 %}
                    <div class="category-tree">
                        {{ _self.render_category_tree(categories) }}
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        No categories found. Create your first category!
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% macro render_category_tree(categories) %}
    <ul class="list-group">
        {% for category in categories %}
            <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="fw-bold text-decoration-none">
                            {{ category.name }}
                        </a>
                        {% if category.description %}
                            <small class="text-muted ms-2">{{ category.description|striptags|slice(0, 50) }}{% if category.description|length > 50 %}...{% endif %}</small>
                        {% endif %}
                    </div>
                    <div>
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-primary me-1" title="Edit category">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="{{ path('category_new_subcategory', {'id': category.id}) }}" class="btn btn-sm btn-outline-success me-1" title="Add subcategory">
                            <i class="bi bi-diagram-3"></i>
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ category.id }}" title="Delete category">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Delete Modal for {{ category.name }} -->
                <div class="modal fade" id="deleteModal{{ category.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ category.id }}" aria-hidden="true" data-has-products="{{ category.products|length > 0 ? '1' : '0' }}" data-has-children="{{ category.children|length > 0 ? '1' : '0' }}">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel{{ category.id }}">Delete Category: {{ category.name }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="delete-warnings"></div>
                                <p>Are you sure you want to delete this category? This action cannot be undone.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form action="{{ path('category_delete', {'id': category.id}) }}" method="post" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-category-' ~ category.id) }}">
                                    <button type="submit" class="btn btn-danger btn-delete">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if category.children|length > 0 %}
                    <div class="ms-4 mt-2">
                        {{ _self.render_category_tree(category.children) }}
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add event listener to show appropriate warning messages in delete modals
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModals = document.querySelectorAll('[id^="deleteModal"]');
            deleteModals.forEach(modal => {
                const hasProducts = modal.getAttribute('data-has-products') === '1';
                const hasChildren = modal.getAttribute('data-has-children') === '1';
                
                const warningElement = modal.querySelector('.delete-warnings');
                const deleteButton = modal.querySelector('.btn-delete');
                
                if (hasProducts || hasChildren) {
                    let warningText = '';
                    if (hasProducts) {
                        warningText += '<div class="alert alert-warning">This category has products. Remove or reassign them before deleting.</div>';
                    }
                    if (hasChildren) {
                        warningText += '<div class="alert alert-warning">This category has subcategories. Remove them before deleting.</div>';
                    }
                    warningElement.innerHTML = warningText;
                    deleteButton.classList.add('disabled');
                    deleteButton.setAttribute('disabled', 'disabled');
                }
            });
        });
    </script>
{% endblock %}
