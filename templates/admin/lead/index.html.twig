{% extends 'base_admin.html.twig' %}

{% block title %}Zarządzanie leadami - {{ 'admin.admin_panel'|trans }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="bi bi-envelope-heart"></i> Zarządzanie leadami</h1>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> {{ 'admin.back_to_dashboard'|trans }}
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message|trans }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ message|trans }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- Filtry -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-funnel"></i> Filtry</h5>
                <form method="GET" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label">Szukaj po nazwie, email lub temacie</label>
                        <input type="text" class="form-control" id="search" name="search" value="{{ currentSearch }}" placeholder="Wprowadź szukany tekst...">
                    </div>
                    <div class="col-md-3">
                        <label for="source" class="form-label">Źródło</label>
                        <select class="form-select" id="source" name="source">
                            <option value="">Wszystkie źródła</option>
                            <option value="contact" {% if currentSource == 'contact' %}selected{% endif %}>Kontakt</option>
                            <option value="info" {% if currentSource == 'info' %}selected{% endif %}>O NAS</option>
                        </select>
                    </div>
                    <div class="col-md-5 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> {{ 'buttons.filter'|trans }}
                        </button>
                        <a href="{{ path('admin_lead_list') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Resetuj
                        </a>
                    </div>
                </form>
            </div>
        </div>

        {% if pagination.items is empty %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                {% if currentSearch or currentSource %}
                    Nie znaleziono leadów odpowiadających podanym kryteriom.
                {% else %}
                    Nie otrzymano jeszcze żadnych leadów z formularzy kontaktowych.
                {% endif %}
            </div>
        {% else %}
            <div class="row mb-3">
                <div class="col">
                    <p class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        Znaleziono <strong>{{ pagination.totalItemCount }}</strong> lead(ów)
                        {% if pagination.pageCount > 1 %}
                            (strona {{ pagination.currentPageNumber }} z {{ pagination.pageCount }})
                        {% endif %}
                    </p>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Data wpłynięcia</th>
                            <th>Imię/Nazwa</th>
                            <th>Email</th>
                            <th>Temat</th>
                            <th>Źródło</th>
                            <th>Wiadomość</th>
                            <th class="text-center">{{ 'common.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lead in pagination.items %}
                            <tr>
                                <td>
                                    <small class="text-muted">{{ lead.submittedAt|date('Y-m-d') }}</small><br>
                                    <small>{{ lead.submittedAt|date('H:i') }}</small>
                                </td>
                                <td>
                                    <strong>{{ lead.name }}</strong>
                                </td>
                                <td>
                                    <a href="mailto:{{ lead.email }}" class="text-decoration-none">
                                        <i class="bi bi-envelope"></i> {{ lead.email }}
                                    </a>
                                </td>
                                <td>
                                    <span class="fw-medium">{{ lead.subject }}</span>
                                </td>
                                <td>
                                    {% if lead.source == 'contact' %}
                                        <span class="badge bg-primary">
                                            <i class="bi bi-telephone"></i> Kontakt
                                        </span>
                                    {% elseif lead.source == 'info' %}
                                        <span class="badge bg-info">
                                            <i class="bi bi-info-circle"></i> O NAS
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ lead.source }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;" title="{{ lead.message }}">
                                        {{ lead.message }}
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('admin_lead_details', {'id': lead.id}) }}"
                                           class="btn btn-outline-primary"
                                           title="Zobacz szczegóły">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-danger"
                                                onclick="confirmDelete({{ lead.id }}, '{{ lead.name|e('js') }}')"
                                                title="Usuń lead">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if pagination.pageCount > 1 %}
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(pagination) }}
                </div>
            {% endif %}
        {% endif %}
    </div>

    <!-- Modal for delete confirmation -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Potwierdź usunięcie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Czy na pewno chcesz usunąć lead od <strong id="leadName"></strong>?</p>
                    <p class="text-muted">Ta operacja jest nieodwracalna.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Usuń
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(leadId, leadName) {
            document.getElementById('leadName').textContent = leadName;
            document.getElementById('deleteForm').action = "{{ path('admin_lead_list') }}/" + leadId + "/delete";

            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
{% endblock %}