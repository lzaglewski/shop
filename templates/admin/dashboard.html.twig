{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.dashboard'|trans }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="mb-4">{{ 'admin.dashboard'|trans }}</h1>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-box-seam"></i> {{ 'admin.orders_management'|trans }}
                        </h5>
                        <p class="card-text">{{ 'admin.orders_description'|trans }}</p>
                        <a href="{{ path('admin_order_list') }}" class="btn btn-primary">{{ 'admin.manage_orders'|trans }}</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-people"></i> {{ 'admin.user_management'|trans }}
                        </h5>
                        <p class="card-text">{{ 'admin.user_description'|trans }}</p>
                        <a href="{{ path('user_index') }}" class="btn btn-primary">{{ 'admin.manage_users'|trans }}</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-currency-euro"></i> {{ 'admin.client_prices'|trans }}
                        </h5>
                        <p class="card-text">{{ 'admin.client_prices_description'|trans }}</p>
                        <a href="{{ path('client_price_index') }}" class="btn btn-primary">{{ 'admin.manage_prices'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-box"></i> {{ 'admin.products'|trans }}
                        </h5>
                        <p class="card-text">{{ 'admin.products_description'|trans }}</p>
                        <a href="{{ path('product_admin_list') }}" class="btn btn-primary">{{ 'admin.view_products'|trans }}</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-gear"></i> Ustawienia
                        </h5>
                        <p class="card-text">Zarządzaj ustawieniami systemu, w tym kategorią produktów wyświetlaną na stronie głównej.</p>
                        <a href="{{ path('admin_settings') }}" class="btn btn-primary">Zarządzaj ustawieniami</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
