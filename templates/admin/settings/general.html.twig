{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'settings.general'|trans }} - {{ 'navigation.admin'|trans }}{% endblock %}

{% block body %}
    <div class="container my-4">
    <h1 class="mb-4">Ustawienia systemu</h1>

    <!-- Navigation tabs -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_settings') }}">Strona główna</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_settings_general') }}">{{ 'settings.general'|trans }}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('admin_settings_email') }}">Ustawienia email</a>
        </li>
    </ul>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ 'settings.general'|trans }}</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="currency" class="form-label">{{ 'settings.currency'|trans }}</label>
                                    <input type="text"
                                           class="form-control"
                                           id="currency"
                                           name="currency"
                                           value="{{ currency }}"
                                           required
                                           maxlength="10"
                                           placeholder="€">
                                    <div class="form-text">{{ 'settings.currency_help'|trans }}</div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">{{ 'buttons.save'|trans }}</button>
                        <a href="{{ path('admin_settings') }}" class="btn btn-secondary">{{ 'buttons.cancel'|trans }}</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
