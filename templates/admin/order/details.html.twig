{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.orderNumber }} - Admin Panel{% endblock %}

{% block body %}
    <div class="container my-4">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_order_list') }}">Orders</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order #{{ order.orderNumber }}</li>
            </ol>
        </nav>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">Order #{{ order.orderNumber }}</h2>
                <span class="badge bg-{{ order.status.value == 'new' ? 'warning' : 
                                        order.status.value == 'processing' ? 'info' : 
                                        order.status.value == 'shipped' ? 'primary' : 
                                        order.status.value == 'delivered' ? 'success' : 'danger' }}">
                    {{ order.status.value|capitalize }}
                </span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="h6 mb-3">Order Information</h3>
                        <p class="mb-1"><strong>Date:</strong> {{ order.createdAt|date('Y-m-d H:i') }}</p>
                        <p class="mb-1"><strong>Total:</strong> {{ order.totalAmount|number_format(2) }}</p>
                        <p class="mb-1"><strong>Items:</strong> {{ order.items|length }}</p>
                    </div>
                    <div class="col-md-6">
                        <h3 class="h6 mb-3">Customer Information</h3>
                        <p class="mb-1"><strong>Email:</strong> {{ order.customerEmail }}</p>
                        <p class="mb-1"><strong>Company:</strong> {{ order.customerCompanyName }}</p>
                        {% if order.customerTaxId %}
                            <p class="mb-1"><strong>Tax ID:</strong> {{ order.customerTaxId }}</p>
                        {% endif %}
                        {% if order.user %}
                            <p class="mb-1"><strong>User Account:</strong> Yes (ID: {{ order.user.id }})</p>
                        {% else %}
                            <p class="mb-1"><strong>User Account:</strong> No (Guest Order)</p>
                        {% endif %}
                    </div>
                </div>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="h6 mb-3">Shipping Address</h3>
                        <p>{{ order.shippingAddress|nl2br }}</p>
                    </div>
                    <div class="col-md-6">
                        <h3 class="h6 mb-3">Billing Address</h3>
                        <p>{{ order.billingAddress|nl2br }}</p>
                    </div>
                </div>
                
                {% if order.notes %}
                    <hr>
                    <h3 class="h6 mb-3">Order Notes</h3>
                    <p>{{ order.notes|nl2br }}</p>
                {% endif %}
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="h5 mb-0">Update Order Status</h2>
            </div>
            <div class="card-body">
                <form action="{{ path('admin_order_update_status', {'orderNumber': order.orderNumber}) }}" method="post" class="row g-3 align-items-end">
                    <div class="col-auto">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select">
                            <option value="new" {{ order.status.value == 'new' ? 'selected' : '' }}>New</option>
                            <option value="processing" {{ order.status.value == 'processing' ? 'selected' : '' }}>Processing</option>
                            <option value="shipped" {{ order.status.value == 'shipped' ? 'selected' : '' }}>Shipped</option>
                            <option value="delivered" {{ order.status.value == 'delivered' ? 'selected' : '' }}>Delivered</option>
                            <option value="cancelled" {{ order.status.value == 'cancelled' ? 'selected' : '' }}>Cancelled</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Update Status</button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h2 class="h5 mb-0">Order Items</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>SKU</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.items %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if item.product.imageFilename %}
                                                <img src="{{ asset('uploads/products/' ~ item.product.imageFilename) }}" 
                                                    alt="{{ item.product.name }}" class="img-thumbnail me-3" style="width: 50px;">
                                            {% endif %}
                                            <div>
                                                <strong>{{ item.product.name }}</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{ item.product.sku }}</td>
                                    <td>{{ item.price|number_format(2) }}</td>
                                    <td>{{ item.quantity }}</td>
                                    <td>{{ (item.price * item.quantity)|number_format(2) }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total:</strong></td>
                                <td><strong>{{ order.totalAmount|number_format(2) }}</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="{{ path('admin_order_list') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>
{% endblock %}
