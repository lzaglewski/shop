{% extends 'base.html.twig' %}

{% block title %}All Orders - Admin Panel{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>All Orders</h1>
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        {% if orders is empty %}
            <div class="alert alert-info">
                No orders have been placed yet.
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Company</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.orderNumber }}</td>
                                <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    {{ order.customerEmail }}
                                    {% if order.user %}
                                        <span class="badge bg-info">Registered</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Guest</span>
                                    {% endif %}
                                </td>
                                <td>{{ order.customerCompanyName }}</td>
                                <td>{{ order.totalAmount|number_format(2) }}</td>
                                <td>
                                    {% set statusClass = {
                                        'new': 'warning',
                                        'processing': 'info',
                                        'shipped': 'primary',
                                        'delivered': 'success',
                                        'cancelled': 'danger'
                                    } %}
                                    <span class="badge bg-{{ statusClass[order.status.value] }}">
                                        {{ order.status.value|capitalize }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('admin_order_details', {'orderNumber': order.orderNumber}) }}" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}
