<div id="cookie-banner" class="cc-banner hidden" role="dialog" aria-live="polite" aria-label="Cookie banner">
  <div class="cc-box">
    <div class="cc-title">{{ 'consent.banner.title'|trans }}</div>
    <div class="cc-text">
      {{ 'consent.banner.text'|trans }}
    </div>
    <div class="cc-actions">
      <button class="cc-btn cc-btn-outline" id="cc-settings">{{ 'consent.buttons.settings'|trans }}</button>
      <button class="cc-btn cc-btn-dark" id="cc-reject">{{ 'consent.buttons.reject'|trans }}</button>
      <button class="cc-btn cc-btn-accept" id="cc-accept">{{ 'consent.buttons.accept'|trans }}</button>
    </div>
  </div>
</div>
