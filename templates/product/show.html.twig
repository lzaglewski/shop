{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('product_list') }}">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-5 mb-4">
                <div class="card">
                    {% if product.imageFilename %}
                        <img src="{{ asset('uploads/products/' ~ product.imageFilename) }}" class="card-img-top" alt="{{ product.name }}">
                    {% else %}
                        <div class="bg-light text-center p-5" style="height: 300px;">
                            <i class="bi bi-image text-secondary" style="font-size: 5rem;"></i>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-7">
                <h1 class="mb-3">{{ product.name }}</h1>
                
                <p class="text-muted">SKU: {{ product.sku }}</p>
                
                {% if product.category %}
                    <p class="mb-3">
                        <span class="badge bg-secondary">{{ product.category.name }}</span>
                    </p>
                {% endif %}
                
                <div class="mb-4">
                    <h2 class="h4">Price</h2>
                    <div class="d-flex align-items-center">
                        {% if app.user and clientPrice is defined and clientPrice %}
                            <span class="fs-3 fw-bold me-3">{{ clientPrice.price }}€</span>
                            <span class="text-muted text-decoration-line-through">{{ product.basePrice }}€</span>
                            {% if clientPrice.price < product.basePrice %}
                                <span class="badge bg-success ms-2">
                                    {{ ((1 - clientPrice.price / product.basePrice) * 100)|round }}% OFF
                                </span>
                            {% endif %}
                        {% else %}
                            <span class="fs-3 fw-bold">{{ product.basePrice }}€</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="mb-4">
                    <h2 class="h4">Description</h2>
                    <p>{{ product.description|nl2br }}</p>
                </div>
                
                <div class="mb-4">
                    <h2 class="h4">Availability</h2>
                    {% if product.stock > 0 %}
                        <p class="text-success">
                            <i class="bi bi-check-circle-fill"></i> In Stock ({{ product.stock }} available)
                        </p>
                        
                        <form action="{{ path('cart_add', {'id': product.id}) }}" method="post" class="mt-3">
                            <div class="row g-3 align-items-center">
                                <div class="col-auto">
                                    <label for="quantity" class="col-form-label">Quantity:</label>
                                </div>
                                <div class="col-auto">
                                    <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="{{ product.stock }}" style="width: 80px;">
                                </div>
                                <div class="col-auto">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                    </button>
                                </div>
                            </div>
                        </form>
                    {% else %}
                        <p class="text-danger">
                            <i class="bi bi-x-circle-fill"></i> Out of Stock
                        </p>
                    {% endif %}
                </div>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="d-flex mt-4">
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
