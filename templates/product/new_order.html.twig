{% extends 'base.html.twig' %}
{% import 'macros/category.html.twig' as categoryMacros %}

{% block title %}{{ 'navigation.new_order'|trans }} - B2B Shop{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ 'navigation.new_order'|trans }}</h1>
            <a href="{{ path('cart_index') }}" class="btn btn-primary">
                <i class="bi bi-cart"></i> {{ 'buttons.view_cart'|trans }}
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <form method="get" class="row g-3">
                    <div class="col-md-3">
                        <label for="category" class="form-label">{{ 'common.category'|trans }}</label>
                        <select name="category" id="category" class="form-select">
                            <option value="">{{ 'product.all_categories'|trans }}</option>
                            {{ categoryMacros.renderCategoryOptions(categories, selectedCategory) }}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="search" class="form-label">{{ 'product.search'|trans }}</label>
                        <input type="text" name="search" id="search" class="form-control" value="{{ searchTerm }}">
                    </div>
                    <div class="col-md-2">
                        <label for="sort_by" class="form-label">{{ 'common.sort_by'|trans }}</label>
                        <select name="sort_by" id="sort_by" class="form-select">
                            <option value="date_added" {% if not sortBy or sortBy == 'date_added' %}selected{% endif %}>{{ 'common.date_added'|trans }}</option>
                            <option value="name" {% if sortBy == 'name' %}selected{% endif %}>{{ 'common.product_name'|trans }}</option>
                            <option value="price" {% if sortBy == 'price' %}selected{% endif %}>{{ 'common.price'|trans }}</option>
                            <option value="category" {% if sortBy == 'category' %}selected{% endif %}>{{ 'common.category'|trans }}</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="sort_order" class="form-label">{{ 'common.order'|trans }}</label>
                        <select name="sort_order" id="sort_order" class="form-select">
                            <option value="desc" {% if not sortOrder or sortOrder == 'desc' %}selected{% endif %}>{{ 'common.descending'|trans }}</option>
                            <option value="asc" {% if sortOrder == 'asc' %}selected{% endif %}>{{ 'common.ascending'|trans }}</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">{{ 'buttons.filter'|trans }}</button>
                    </div>
                </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <a href="{{ path('product_new_order', {
                                        category: selectedCategory,
                                        search: searchTerm,
                                        sort_by: 'name',
                                        sort_order: sortBy == 'name' and sortOrder == 'asc' ? 'desc' : 'asc'
                                    }) }}" class="text-decoration-none text-dark">
                                        {{ 'common.product'|trans }}
                                        {% if sortBy == 'name' %}
                                            <i class="bi bi-chevron-{{ sortOrder == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ path('product_new_order', {
                                        category: selectedCategory,
                                        search: searchTerm,
                                        sort_by: 'category',
                                        sort_order: sortBy == 'category' and sortOrder == 'asc' ? 'desc' : 'asc'
                                    }) }}" class="text-decoration-none text-dark">
                                        {{ 'common.category'|trans }}
                                        {% if sortBy == 'category' %}
                                            <i class="bi bi-chevron-{{ sortOrder == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>
                                    <a href="{{ path('product_new_order', {
                                        category: selectedCategory,
                                        search: searchTerm,
                                        sort_by: 'price',
                                        sort_order: sortBy == 'price' and sortOrder == 'asc' ? 'desc' : 'asc'
                                    }) }}" class="text-decoration-none text-dark">
                                        {{ 'common.price'|trans }}
                                        {% if sortBy == 'price' %}
                                            <i class="bi bi-chevron-{{ sortOrder == 'asc' ? 'up' : 'down' }}"></i>
                                        {% endif %}
                                    </a>
                                </th>
                                <th>{{ 'common.quantity'|trans }}</th>
                                <th>{{ 'common.subtotal'|trans }}</th>
                                <th>{{ 'common.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                                {% set finalPrice = clientPrices[product.id] is defined ? clientPrices[product.id] : product.basePrice %}

                                <tr data-product-id="{{ product.id }}" data-price="{{ finalPrice }}">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if product.imageFilename %}
                                                <img src="{{ asset(product_thumbnail_or_image(product.imageFilename, 'small', product.id)) }}"
                                                     class="img-thumbnail me-3"
                                                     style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;"
                                                     alt="{{ product.name }}"
                                                     onclick="window.location.href='{{ path('product_show', {'id': product.id}) }}'">
                                            {% else %}
                                                <div class="bg-light d-flex align-items-center justify-content-center me-3"
                                                     style="width: 60px; height: 60px; cursor: pointer;"
                                                     onclick="window.location.href='{{ path('product_show', {'id': product.id}) }}'">
                                                    <i class="bi bi-image text-secondary"></i>
                                                </div>
                                            {% endif %}
                                            <div>
                                                <strong style="cursor: pointer;" onclick="window.location.href='{{ path('product_show', {'id': product.id}) }}'">{{ product.name }}</strong>
                                                <br>
                                                <small class="text-muted">{{ product.sku }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if product.category %}
                                            {{ product.category.name }}
                                        {% else %}
                                            <span class="text-muted">{{ 'product.no_category'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="product-price">{{ finalPrice }}{{ currency() }}</td>
                                    <td>
                                        <input type="number"
                                               class="form-control quantity-input"
                                               min="0"
                                               max="{{ product.stock }}"
                                               value="0"
                                               style="width: 80px;"
                                               data-product-id="{{ product.id }}">
                                        <small class="text-muted">Max: {{ product.stock }}</small>
                                    </td>
                                    <td class="subtotal">0.00{{ currency() }}</td>
                                    <td>
                                        {% if product.id in cartProductIds %}
                                            <button class="btn btn-secondary btn-sm" disabled>
                                                <i class="bi bi-cart-check"></i> {{ 'buttons.in_cart'|trans }}
                                            </button>
                                        {% else %}
                                            <button class="btn btn-success btn-sm add-to-cart-btn"
                                                    data-product-id="{{ product.id }}"
                                                    disabled>
                                                <i class="bi bi-cart-plus"></i> {{ 'buttons.add_to_cart'|trans }}
                                            </button>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="alert alert-info mb-0">
                                            {{ 'product.no_products_found'|trans }} {% if app.request.query.count > 0 %}{{ 'product.try_changing_filters'|trans }}{% endif %}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="navigation d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(products) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update subtotal and button state when quantity changes
            document.querySelectorAll('.quantity-input').forEach(function(input) {
                input.addEventListener('input', function() {
                    const row = this.closest('tr');
                    const price = parseFloat(row.getAttribute('data-price'));
                    const quantity = parseInt(this.value) || 0;
                    const subtotal = price * quantity;

                    // Update subtotal
                    row.querySelector('.subtotal').textContent = subtotal.toFixed(2) + '{{ currency() }}';

                    // Enable/disable add to cart button (only for products not in cart)
                    const addBtn = row.querySelector('.add-to-cart-btn');
                    if (addBtn) {
                        addBtn.disabled = quantity <= 0;
                    }
                });
            });

            // Handle add to cart button clicks with AJAX
            document.querySelectorAll('.add-to-cart-btn').forEach(function(button) {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    const row = this.closest('tr');
                    const quantityInput = row.querySelector('.quantity-input');
                    const quantity = parseInt(quantityInput.value) || 0;

                    if (quantity <= 0) {
                        alert('Please enter a valid quantity');
                        return;
                    }

                    // Disable button to prevent double clicks
                    this.disabled = true;
                    this.innerHTML = '<i class="bi bi-hourglass-split"></i> Adding...';

                    // Send AJAX request to add to cart
                    fetch('{{ path('cart_ajax_add') }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'product_id=' + productId + '&quantity=' + quantity
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Reset quantity to 0 and update subtotal
                            quantityInput.value = 0;
                            row.querySelector('.subtotal').textContent = '0.00{{ currency() }}';

                            // Change button to "In Cart" state
                            this.className = 'btn btn-secondary btn-sm';
                            this.innerHTML = '<i class="bi bi-cart-check"></i> {{ 'buttons.in_cart'|trans }}';
                            this.disabled = true;

                            // Update cart counter in navbar if exists
                            const cartCounter = document.querySelector('.cart-count');
                            if (cartCounter && data.itemCount) {
                                cartCounter.textContent = data.itemCount;
                            }

                            // Show success message
                            showMessage('{{ 'cart.product_added_successfully'|trans }}', 'success');
                        } else {
                            // Re-enable button on error
                            this.disabled = false;
                            this.innerHTML = '<i class="bi bi-cart-plus"></i> {{ 'buttons.add_to_cart'|trans }}';
                            showMessage(data.message, 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        // Re-enable button on error
                        this.disabled = false;
                        this.innerHTML = '<i class="bi bi-cart-plus"></i> {{ 'buttons.add_to_cart'|trans }}';
                        showMessage('An error occurred while adding the product to cart', 'error');
                    });
                });
            });

            // Function showMessage is now available globally from base.html.twig
        });
    </script>
{% endblock %}
